@model IEnumerable<EMarket.Models.Role>

@{
    ViewData["Title"] = "Quản lý quyền truy cập";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";

    ViewBag.PageController = "AdminRoles";
    ViewBag.PageAction = "Index";
    ViewBag.PageControllerName = "Quản lý quyền truy cập";
    ViewBag.PageActionName = "Danh sách";
}

@*<h2 class="mb-2">Quản lý quyền truy cập</h2>*@
<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Trang chủ</a>
            <a class="breadcrumb-item" asp-area="Admin" asp-controller="@ViewBag.PageController" asp-action="Index">@ViewBag.PageControllerName</a>
            <a asp-area="Admin" asp-controller="@ViewBag.PageController" asp-action="@ViewBag.PageAction"><span class="breadcrumb-item active"> > @ViewBag.PageActionName</span></a>
        </nav>
    </div>
</div>
<p class="mt-5">
    <a class="btn btn-success m-r-5 font-weight-bold" asp-action="Create">
        <i class="anticon anticon-plus"></i> Thêm
    </a>
</p>
<div class="table-responsive">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">
                    #
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.RoleName)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td scope="row">
                        @Html.DisplayFor(modelItem => item.RoleId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RoleName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        <a class="btn btn-primary m-r-5" asp-action="Details" asp-route-id="@item.RoleId">Chi tiết</a>
                        <a class="btn btn-warning m-r-5" asp-action="Edit" asp-route-id="@item.RoleId">Sửa</a>
                        <a class="btn btn-danger m-r-5" asp-action="Delete" asp-route-id="@item.RoleId">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
