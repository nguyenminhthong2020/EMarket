@model List<EMarket.ModelViews.CartItem>

@if (Model != null && Model.Count > 0)
{
    <div class="harmic-offcanvas-body" id="miniCartBody">
        <div class="minicart-content">
            <div class="minicart-heading">
                <h4 class="mb-0">GIỎ HÀNG</h4>
                <a href="#" class="button-close"><i class="pe-7s-close"></i></a>
            </div>
            <ul class="minicart-list">
                @foreach (var item in Model)
                {
                    string url = $"/{item.product.Alias}-{item.product.ProductId}.html";
                    <li class="minicart-product">
                        <a class="product-item_remove" href="#">
                            <i class="pe-7s-close"></i>
                        </a>
                        <a href="@url" class="product-item_img">
                            <img class="img-full" src="~/images/products/@item.product.Thumb" alt="@item.product.Title" width="112" height="124">
                        </a>
                        <div class="product-item_content">
                            <a class="product-item_title" href="@url">@item.product.ProductName</a>
                            <span class="product-item_quantity">@item.amount x @item.product.Price.Value.ToString("#,##0") VNĐ</span>
                        </div>
                    </li>
                }
            </ul>
        </div>
        <div class="minicart-item_total">
            <span>Tạm tính</span>
            <span class="ammount">@Model.Sum(_ => _.TotalMoney).ToString("#,##0") VNĐ</span>
        </div>
        <div class="group-btn_wrap d-grid gap-2">
            <a href="cart.html" class="btn btn-secondary btn-primary-hover">Xem giỏ hàng</a>
            <a href="checkout.html" class="btn btn-secondary btn-primary-hover">Thanh toán</a>
        </div>
    </div>
}
else
{
    <div class="harmic-offcanvas-body" id="miniCartBody">
        <div class="minicart-content">
            <div class="minicart-heading">
                <h4 class="mb-0">GIỎ HÀNG RỖNG</h4>
                <a href="#" class="button-close"><i class="pe-7s-close"></i></a>
            </div>
        </div>
        @*<div class="group-btn_wrap d-grid gap-2">
                <a href="cart.html" class="btn btn-secondary btn-primary-hover">View Cart</a>
                <a href="checkout.html" class="btn btn-secondary btn-primary-hover">Checkout</a>
            </div>*@
    </div>
}

