@model List<Order>

@if (Model != null && Model.Count > 0)
{
    <table class="table table-bordered table-hover">
        <tbody>
            <tr>
                <th>ID</th>
                <th>Ngày mua hàng</th>
                <th>Ngày ship hàng</th>
                <th>Trạng thái</th>
                <th>Tổng tiền</th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td><a class="account-order-id" href="javascript:void(0)">#@item.OrderId</a></td>
                    <td>@item.OrderDate</td>
                    <td>@item.ShipDate</td>
                    <td>@item.TransactStatus.Status</td>
                    <td>@item.TotalMoney.ToString("#,##0") VNĐ</td>
                    <td>
                        <btn data-madonhang="@item.OrderId"
                             class="xemdonhang btn btn-secondary btn-primary-hover"><span>Xem đơn hàng</span></btn>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div id="records_table"></div>
}
else
{
    <p>Chưa có đơn hàng nào</p>
}




